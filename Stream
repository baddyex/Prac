          int count1=0;
          int count2=0;
          for(int i=0;i<str.length();i++) {
          sop(str.charAt(i));                      r- (((())) all in nxt line

               if( str.charAt(i)=='(' ){
                   count1++  ;                            //int count add kiye yaha aake upar me
                } else if ( str.charAt(i)==')'  ){ 
                   count2++  ;                            // int count2 add kiye yaha aake upar me
                 }
          }
